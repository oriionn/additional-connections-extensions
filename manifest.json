{
  "name": "Additional Connections",
  "description": "Additional connections for Discord",
  "manifest_version": 3,
  "version": "1.0.0",
  "permissions": [ "activeTab", "storage", "tabs", "scripting" ],
  "content_scripts": [
    {
      "matches": [ "*://bc-api.oriondev.fr/*" ],
      "js": [ "content.js" ]
    }
  ],
  "action": {
    "default_popup": "popups/index.html"
  }
}